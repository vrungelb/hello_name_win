{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe сборка активного файла",
			"command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-I\"C:/C++ Libraries/SFML-2.6.2/include\"",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-L\"C:/C++ Libraries/SFML-2.6.2/lib\"",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: C:\\msys64\\ucrt64\\bin\\g++.exe"
		}
	]
}